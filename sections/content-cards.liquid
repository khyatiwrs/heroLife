{{ 'section-content-cards.css' | asset_url | stylesheet_tag }}
<style>
	#shopify-section-{{ section.id }} .cards-content {
		margin-top: {{ section.settings.spacing_top | times: 0.8 | round: 0 }}px;
		margin-bottom: {{ section.settings.spacing_bottom | times: 0.8 | round: 0 }}px;
	}
	@media (min-width: 990px) {
		#shopify-section-{{ section.id }} .cards-content {
			margin-top: {{ section.settings.spacing_top }}px;
			margin-bottom: {{ section.settings.spacing_bottom }}px;
		}
	}
</style>
<div class="container"> 
  <div class="cards-content">
    <div class="ctop-content"><h3>{{ section.settings.heading }}</h3></div>
    <div class="cards">
      {%- for block in section.blocks -%}
       <div class="card">
         {% if block.settings.c_link != blank %}
            <a class="main-link" href="{{ block.settings.c_link }}">
            {% endif %}
        
                {% if block.settings.c_pic != blank %}
              <img src="{{ block.settings.c_pic | img_url: '520x' }}" alt="{{ image.alt }}">
              {% endif %}
        
            {% if block.settings.c_link != blank %}
            </a>
            {% endif %}
       </div>
      {%- endfor -%}
     
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Collection list scroller",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "heading"
      },
      {
        "type": "color",
        "id": "colorBackground",
        "label": "CollectionBox Background color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "colorText",
        "label": "Collection Title",
        "default": "#000"
      },
      {
        "type": "checkbox",
        "id": "en_scroller",
        "label": "Enable Scroll Bar",
        "default": false
      },
    {
      "type": "range",
      "id": "spacing_top",
      "min": 0,
      "max": 150,
      "step": 2,
      "default": 60,
      "label": "t:sections.all.section_spacing.spacing_top.label"
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 150,
      "step": 2,
      "default": 60,
      "label": "t:sections.all.section_spacing.spacing_bottom.label"
    }
],
"blocks": [
      {
        "type": "card",
        "name": "Card",
        "settings": [
            {
              "type": "image_picker",
              "id": "card_img",
             "label": "Card image"
            },
            {
              "type": "url",
              "id": "card_link",
             "label": "Card Link"
            },
            {
              "type": "image_picker",
              "id": "c_pic",
             "label": "Collection picture"
            }
        ]
      }
   ],
  "presets": [
    {
      "name": "Collection list scroller",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
  }
{% endschema %}